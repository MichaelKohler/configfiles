# Android
ac_add_options --with-android-ndk="/data/development/mozilla/android-ndk-r8c"
ac_add_options --with-android-sdk="/data/development/mozilla/android-sdk-linux/platforms/android-16"
ac_add_options --with-android-version=9

# Build
ac_add_options --enable-application=mobile/android
ac_add_options --target=arm-linux-androideabi
ac_add_options --with-ccache
ac_add_options --enable-debug
ac_add_options --disable-optimize
ac_add_options --disable-elf-hack
mk_add_options MOZ_OBJDIR=../objdir-droid
mk_add_options MOZ_MAKE_FLAGS="-j6 -s"
