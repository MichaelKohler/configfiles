# Add the correct paths here:
ac_add_options --with-android-ndk="$HOME/development/mozilla/android-ndk-r5c"
ac_add_options --with-android-sdk="$HOME/development/mozilla/android-sdk-linux/platforms/android-16"
ac_add_options --with-android-version=8

# android options
ac_add_options --enable-application=mobile/android
ac_add_options --target=arm-linux-androideabi
ac_add_options --with-ccache

mk_add_options MOZ_OBJDIR=../objdir-droid
mk_add_options MOZ_MAKE_FLAGS="-j9 -s"
